{
    "app-id" : "nl.emphisia.icon",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "folder_icon",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                "type": "git",
                "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                "tag": "v0.14.0"
                }
            ]
        },
        {
            "name" : "folder_icon",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "archive",
                    "url" : "https://github.com/youpie/Iconic/releases/download/v2025.3.1/Iconic-Release.tar.xz",
                    "sha256" : "0b1dceffad4137d8545e194c3083e16c2bcb5bfb04fa260ee6ba67c2b117acba"
                    
                }
            ]
        }
    ]
}
