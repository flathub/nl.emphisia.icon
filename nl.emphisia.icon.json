{
    "id": "nl.emphisia.icon",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "Iconic",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "RUST_LOG": "Iconic=info"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.18.0"
                }
            ]
        },
        {
            "name" : "Iconic",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type": "archive",
                    "url" : "https://github.com/youpie/Iconic/releases/download/v2025.9.1/Iconic-2025.9.1.tar.xz",
                    "sha256" : "1a81c8ea4b2b112446f426af32687a6ac93d69bada05761fc1eb7c0a5102e983"
                    
                }
            ]
        }
    ]
}
